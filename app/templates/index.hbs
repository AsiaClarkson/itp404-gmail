<style>
  body {
    font-family: Avenir, sans-serif;
    font-size: 12pt;
    background-image: linear-gradient(to bottom right, #E0EAFC, #CFDEF3);
    background-repeat: no-repeat;
    background-attachment: fixed;
  }

  a {
    text-decoration: none;
    color: black;
  }

  #container {
    height: 600px;
    width: 1000px;
    overflow: scroll;
    background-color: rgba(255, 255, 255, .6);
    margin-left: 300px;
    position: relative;
    top: 40px;

  }
    #container-starred {
    height: 300px;
    width: 1000px;
    overflow: scroll;
    background-color: rgba(255, 255, 255, .6);
    margin-left: 300px;
    position: relative;
    top: 90px;
    margin-bottom: 100px;

  }

  #from {
    width: 200px;
  }

  #date {
    max-width: 400px;
    text-align: right;
    float: right;
  }

  #subject {
    max-width: 240px;
    white-space: nowrap;
    overflow: hidden !important;
    text-overflow: ellipsis;
    display: inline-block;
    vertical-align: text-bottom;
  }

  .truncate {
    width: 380px;
    display: inline-block;
    vertical-align: text-bottom;
  }
  #message{
    float: left;
  }

  table {
    width: 1000px;
    padding: 5px 13px 0px 5px;
  }

  tr:hover {
    background-color: white;
  }

  hr {
    border: 0;
    height: 0;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
    border-bottom: 1px solid rgba(255, 255, 255, 0.3);
  }

  #star {
    display: inline;
    float: right;
    z-index: -2;
    vertical-align: middle;
  }
  #star:hover{
    cursor: pointer;
  }
</style>
